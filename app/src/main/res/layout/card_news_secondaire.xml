<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"

>
    <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:weightSum="12"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7" android:orientation="vertical">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/clasement_news"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:text="2."
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textAlignment="center"/>
                        <ImageView
                                android:id="@+id/site_logo"
                                android:layout_width="64dp"
                                android:layout_height="33dp"
                        android:src="@drawable/watan_logo"
                        android:layout_gravity="center"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/cad2_news_titre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="L'algerie d'aujourd'hui"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                <ImageView
                        android:id="@+id/image_card2"
                        android:layout_width="100dp"
                        android:layout_height="81dp"
                        android:src="@drawable/news_image2"
                        android:textAlignment="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginEnd="18.5dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginStart="18.5dp" android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:weightSum="12">
            <TextView
                    android:id="@+id/cadr1_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="A la une - Il y a 5heurs"

                    android:layout_gravity="bottom"
                    android:textSize="12sp"/>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_gravity="bottom">
                <ImageView
                        android:id="@+id/card2_menu"
                        android:layout_width="21dp"
                        android:layout_height="24dp"
                        android:src="@drawable/menu_point" android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" android:layout_marginRight="13dp"
                        android:layout_marginEnd="13dp"
                />
                <ImageView
                        android:id="@+id/card2_newspaper"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_newspaper"
                        android:layout_toStartOf="@+id/card2_menu" android:layout_marginRight="4dp"
                        android:layout_marginEnd="4dp" android:layout_toLeftOf="@+id/card2_menu"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>